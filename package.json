{
  "name": "interior-catalog-ssot",
  "version": "1.0.0",
  "description": "Interior design catalog system with single source of truth and validation",
  "main": "index.js",
  "scripts": {
    "validate:data": "node scripts/validate-catalogs.js",
    "validate:rules": "node scripts/verify-rules.js",
    "validate:all": "npm run validate:data && npm run validate:rules",
    "calc:costs": "node scripts/calc-costs.js",
    "optimize:cuts": "node scripts/optimize-cuts.js",
    "bom:labels": "node scripts/generate-bom-and-labels.js",
    "qc:generate": "node scripts/qc-generate.js",
    "qc:verify": "node scripts/qc-verify.js",
    "app:prepare": "node scripts/app-prepare.js",
    "ops:prepare": "node scripts/ops-prepare.js",
    "ops:snapshot": "node scripts/ops-snapshot.js",
    "reports:generate": "node scripts/reports-generate.js",
    "critical:inline": "node scripts/inline-critical.js",
    "qa": "node scripts/qa-test.js",
    "build": "npm run calc:costs && npm run optimize:cuts && npm run bom:labels && npm run app:prepare && npm run ops:prepare && npm run ops:snapshot && npm run critical:inline",
    "test": "npm run validate:all",
    "prebuild": "npm run validate:all",
    "postbuild": "npm run qa"
  },
  "keywords": [
    "interior-design",
    "catalog",
    "ssot",
    "validation"
  ],
  "author": "Diego",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "pdfkit": "^0.17.1",
    "qrcode": "^1.5.4",
    "yaml": "^2.8.1"
  }
}
